<%- layout('./layout/boilerplate') %>

<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="bg-white flex flex-col lg:flex-row rounded-xl shadow-lg w-full max-w-4xl overflow-hidden border-2">
    <!-- Left Form Section -->
    <div class="w-full lg:w-1/2 p-6 sm:p-8">
      <h1 class="text-2xl sm:text-3xl font-extrabold text-gray-900 mb-4 text-center">Welcome to the <br>Online Shopping System</h1>
      <h2 class="text-sm sm:text-lg text-gray-600 mb-6 text-center">Sign in to access your account</h2>
      <form action="/login" method="POST" id="loginForm" class="space-y-4">
        <!-- Username Input -->
        <div class="relative">
          <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 10a3 3 0 100-6 3 3 0 000 6zm0 1c-2.5 0-5 1.5-5 4v1h10v-1c0-2.5-2.5-4-5-4z" />
              </svg>
            </div>
            <input type="text" id="username" name="username" placeholder="taljamri" required
              class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
          </div>
        </div>
        <!-- Password Input -->
        <div class="relative">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                  d="M5 9a3 3 0 016 0v1h3a1 1 0 011 1v5a1 1 0 01-1 1H5a1 1 0 01-1-1v-5a1 1 0 011-1h3V9zm2 1h2V9a1 1 0 00-2 0v1z"
                  clip-rule="evenodd" />
              </svg>
            </div>
            <input type="password" id="password" name="password" placeholder="••••••••" required
              class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
          </div>
        </div>
        <!-- Remember Me -->
        <label class="flex items-center text-sm text-gray-600 ml-[2px]">
          <input type="checkbox" class="h-4 w-4 text-blue-600 border-gray-200 rounded focus:ring-blue-500">
          <span class="ml-2">Remember Me</span>
        </label>
        <!-- Sign In Button -->
        <div class="mt-6">
          <button type="submit" id="loginButton"
            class="w-full bg-gradient-to-r from-[#121212] to-[#1E1E49] text-white py-2 px-4 rounded-md shadow-md hover:to-[#1E1E49] hover:from-[#000000] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300">
            Sign in
          </button>
        </div>
        <!-- Divider -->
        <div class="flex items-center justify-between my-6">
          <hr class="w-full border-gray-300">
          <span class="px-3 text-gray-500 text-sm">or</span>
          <hr class="w-full border-gray-300">
        </div>
        <!-- Register Link -->
        <div class="text-center text-sm text-gray-600">
          Don't have an account? <a href="/register" class="text-blue-600 hover:underline">Register here</a>.
        </div>
      </form>
      <!-- Footer -->
      <footer class="mt-8 text-center text-gray-500 text-xs">
        <p>&copy; 2024 Online Shopping System. All rights reserved.</p>
        <p><a href="/" class="text-blue-600 hover:underline">Back to Home</a></p>
      </footer>
    </div>
    <!-- Right Image Section -->
    <div class="w-full lg:w-1/2">
      <img src="https://mekava.com/wp-content/uploads/2023/08/Untitled-design-26-1-1536x1536.png" alt="Decorative"
        class="h-64 sm:h-96 lg:h-full w-full object-cover">
    </div>
  </div>
</div>